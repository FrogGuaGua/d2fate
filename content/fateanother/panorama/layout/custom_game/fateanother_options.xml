<root>
    <styles>
        <include src="file://{resources}/styles/custom_game/util.css" />
        <include src="file://{resources}/styles/custom_game/fateanother_options.css" />
    </styles>
    <scripts>
        <include src="file://{resources}/scripts/custom_game/fateanother_util.js" />
        <include src="file://{resources}/scripts/custom_game/fateanother_options.js" />
    </scripts>
    <Panel class="FateOptionsRoot" hittest="false">
        <Panel id="OptionsBackground" onactivate="BackgroundClose()"/>
        <Panel id="OptionsMainContainer" class="OptionsContainerHidden" onactivate="">
            <Panel id="OptionsNavBar">
                <Button class="OptionsCloseButton" onmouseactivate="ToggleOptionsPanel()" onmouseover="AddStyle( OptionsButtonHover )" onmouseout="RemoveStyle( OptionsButtonHover )"/>
            </Panel>
            <Panel id="OptionsTabContainer" />
        </Panel>
    </Panel>
</root>